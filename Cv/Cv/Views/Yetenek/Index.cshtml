@using Cv.Models.Entity
@model List<Yetenekler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>

<h1>İlerleme düzeylerini sql ekle ordan çek güncellemede düzenle</h1>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Yetenek</th>
                                            <th>İlerleme</th>
                                            <th style="width: 40px">Yüzde</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tboydy>
                                        @foreach (var x in Model)
                                        {
                                        <tr>
                                            <td>@x.Id</td>
                                            <td>@x.Yetenek</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="progress-bar bg-warning" style="width: @x.İlerleme%"></div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-danger">@x.İlerleme%</span></td>
                                            <td><a href="/Yetenek/YetenekSil/@x.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Yetenek/YetenekGuncelle/@x.Id" class="btn btn-info">Güncelle</a></td>
                                        </tr>
                                        }
                                    </tboydy>
                                </table>
                                <br />
                                <a href="/Yetenek/YetenekEkle/" class="btn btn-secondary">Yetenek Ekle</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>

